<main>
   <div class="form-wrapper">
      <form action="/register" method="POST">
         <h1>Login</h1>

         <p><%= locals?.message || locals?.messages?.feedback%></p>
         <div class="form-item">
            <label for="uname">Username </label>
            <input
               type="text"
               name="uname"
               id="uname"
               placeholder="Username"
               value="<%= locals?.uname || locals?.messages?.uname%>"
            />
         </div>
         <div class="form-item">
            <label for="email">Email </label>
            <input
               type="text"
               name="email"
               id="email"
               placeholder="Enter email"
               value="<%= locals?.email || locals?.messages?.passwd%>"
            />
         </div>
         <div class="form-item">
            <label for="passwd">Password </label>
            <input
               type="text"
               name="passwd"
               id="passwd"
               placeholder="Password"
               value="<%= locals?.passwd || locals?.messages?.passwd  %>"
            />
         </div>
         <button type="submit" class="btn">Register</button>
         <p>
            Already have an account?
            <a href="/login">Log in here.</a>
         </p>
      </form>
   </div>
</main>
